{
  "name": "FWCloud-API",
  "version": "2.1.5",
  "description": "FWCloud RESTful API.",
  "private": true,
  "scripts": {
    "start": "npm run stop; node dist/src/bin/fwcloud",
    "start:bg": "npm start &",
    "stop": "if [ -f \".pid\" ]; then PID=$(cat .pid); EXISTS=`ps axw | awk '{print $1}' | grep \"^${PID}$\"`; if [ \"$EXISTS\" ]; then kill $PID; fi; fi",
    "update": "npm run stop && git checkout -- package-lock.json && git pull && npm install && git checkout -- package-lock.json && npm run build && node fwcli migration:run && node fwcli standard:services:add",
    "update-cert": "bin/update-cert.sh api",
    "clean": "rm -fr dist/",
    "build": "npm run clean && mkdir -p dist/src && cp -r src/views dist/src/views && node_modules/.bin/tsc",
    "fresh_build_start": "clear && rm -rf node_modules package-lock.json dist && npm i && npm run build && npm run start",
    "watch": "npm run build -- -w",
    "fwcloud": "node --no-warnings dist/src/cli/cli.js",
    "test": "npm run build && NODE_ENV=test node --no-warnings node_modules/mocha/bin/_mocha --timeout 99999 --exit --colors dist/tests/**/*spec.js",
    "format": "prettier --check \"{src,app,lib,tests}/**/*.ts\"",
    "format:check": "npm run format",
    "format:fix": "prettier --write \"{src,app,lib,tests}/**/*.ts\"",
    "lint": "eslint \"{src,app,lib,tests}/**/*.ts\"",
    "lint:check": "npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "dev": "nodemon --ext js,ts --watch src --exec \"npm run build && node dist/src/bin/fwcloud\""
  },
  "dependencies": {
    "archiver": "7.0.1",
    "async": "3.2.6",
    "async-mutex": "0.5.0",
    "axios": "1.13.2",
    "bcryptjs": "3.0.3",
    "body-parser": "2.2.2",
    "child-process-promise": "2.2.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.3",
    "compression": "1.8.1",
    "convict": "6.2.4",
    "convict-format-with-moment": "6.2.0",
    "cors": "2.8.5",
    "cron": "4.4.0",
    "dotenv": "17.2.3",
    "easy-tree": "0.0.3",
    "express": "5.2.1",
    "express-session": "1.18.2",
    "form-data": "4.0.5",
    "fs-extra": "11.3.3",
    "glob": "13.0.0",
    "helmet": "8.1.0",
    "http-proxy": "1.18.1",
    "ipaddr.js": "2.3.0",
    "joi": "18.0.2",
    "kleur": "4.1.5",
    "libsodium-wrappers": "0.8.1",
    "method-override": "3.0.0",
    "moment": "2.30.1",
    "mysql2": "3.16.1",
    "openai": "6.16.0",
    "openpgp": "6.3.0",
    "qrcode": "1.5.4",
    "reflect-metadata": "0.2.2",
    "semver": "7.7.3",
    "semver-compare": "1.0.0",
    "serve-static": "2.2.1",
    "session-file-store": "1.5.0",
    "shell-escape": "0.2.0",
    "socket.io": "4.8.3",
    "speakeasy": "2.0.0",
    "sqlstring": "2.3.3",
    "ssh2": "1.17.0",
    "typeorm": "0.3.28",
    "uuid": "13.0.0",
    "winston": "3.19.0",
    "ws": "8.19.0",
    "yargs": "18.0.0",
    "yauzl": "3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.3",
    "@eslint/js": "9.39.2",
    "@types/busboy": "1.5.4",
    "@types/express": "5.0.6",
    "@types/express-session": "1.18.2",
    "@types/mocha": "10.0.10",
    "@types/node": "25.0.9",
    "@types/serve-static": "2.2.0",
    "@types/session-file-store": "1.2.6",
    "@types/sinon": "21.0.0",
    "@types/supertest": "6.0.3",
    "@types/uuid": "11.0.0",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "busboy": "1.6.0",
    "chai": "6.2.2",
    "chai-as-promised": "8.0.2",
    "chai-json-schema-ajv": "5.2.4",
    "cookie-signature": "1.2.2",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.5",
    "globals": "17.0.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "mocha": "11.3.0",
    "nodemon": "3.1.11",
    "prettier": "3.8.0",
    "sinon": "21.0.1",
    "supertest": "7.2.2",
    "typescript": "5.9.3"
  },
  "overrides": {
    "glob": "13.0.0",
    "cross-spawn": "7.0.6"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
