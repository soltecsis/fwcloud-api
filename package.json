{
  "name": "FWCloud-API",
  "version": "2.0.16",
  "description": "FWCloud RESTful API.",
  "private": true,
  "scripts": {
    "start": "npm run stop; node dist/src/bin/fwcloud",
    "start:bg": "npm start &",
    "stop": "if [ -f \".pid\" ]; then PID=$(cat .pid); EXISTS=`ps axw | awk '{print $1}' | grep \"^${PID}$\"`; if [ \"$EXISTS\" ]; then kill $PID; fi; fi",
    "update": "npm run stop && git checkout -- package-lock.json && git pull && npm install && git checkout -- package-lock.json && npm run build && node fwcli migration:run && node fwcli standard:services:add",
    "update-cert": "bin/update-cert.sh api",
    "clean": "rm -fr dist/",
    "build": "npm run clean && mkdir -p dist/src && cp -r src/views dist/src/views && node_modules/.bin/tsc",
    "fresh_build_start": "clear && rm -rf node_modules package-lock.json dist && npm i && npm run build && npm run start",
    "watch": "npm run build -- -w",
    "fwcloud": "node --no-warnings dist/src/cli/cli.js",
    "test": "npm run build && NODE_ENV=test node --no-warnings node_modules/mocha/bin/_mocha --timeout 99999 --exit --colors dist/tests/**/*spec.js",
    "format": "prettier --check \"{src,app,lib,tests}/**/*.ts\"",
    "format:check": "npm run format",
    "format:fix": "prettier --write \"{src,app,lib,tests}/**/*.ts\"",
    "lint": "eslint \"{src,app,lib,tests}/**/*.ts\"",
    "lint:check": "npm run lint",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky",
    "dev": "nodemon --ext js,ts --watch src --exec \"npm run build && node dist/src/bin/fwcloud\""
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "async": "^3.2.6",
    "async-mutex": "^0.5.0",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "child-process-promise": "^2.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "convict": "^6.2.4",
    "convict-format-with-moment": "^6.2.0",
    "cors": "^2.8.5",
    "cron": "^3.5.0",
    "dotenv": "^16.5.0",
    "easy-tree": "0.0.3",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "form-data": "^4.0.2",
    "fs-extra": "^11.3.0",
    "glob": "11.0.2",
    "helmet": "^8.1.0",
    "http-proxy": "^1.18.1",
    "ipaddr.js": "^2.2.0",
    "joi": "^17.13.3",
    "kleur": "^4.1.5",
    "libsodium-wrappers": "^0.7.15",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "mysql2": "^3.11.4",
    "openpgp": "6.1.1",
    "qrcode": "^1.5.4",
    "reflect-metadata": "0.2.2",
    "semver": "7.7.2",
    "semver-compare": "^1.0.0",
    "serve-static": "^1.16.2",
    "session-file-store": "^1.5.0",
    "shell-escape": "^0.2.0",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "sqlstring": "2.3.3",
    "ssh2": "^1.16.0",
    "typeorm": "^0.3.20",
    "uuid": "11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.2",
    "yargs": "^17.7.2",
    "yauzl": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@types/busboy": "^1.5.4",
    "@types/express": "^5.0.2",
    "@types/express-session": "^1.18.1",
    "@types/mocha": "10.0.10",
    "@types/node": "^22.15.21",
    "@types/serve-static": "^1.15.7",
    "@types/session-file-store": "^1.2.5",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "busboy": "^1.6.0",
    "chai": "4.5.0",
    "chai-as-promised": "7.1.2",
    "chai-json-schema-ajv": "^5.2.4",
    "cookie-signature": "1.2.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "mocha": "^10.8.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "sinon": "19.0.5",
    "supertest": "7.1.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
