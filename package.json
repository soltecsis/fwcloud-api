{
  "name": "FWCloud-API",
  "version": "1.9.2",
  "description": "FWCloud RESTful API.",
  "private": true,
  "scripts": {
    "start": "npm run stop; node dist/src/bin/fwcloud",
    "start:bg": "npm start &",
    "stop": "if [ -f \".pid\" ]; then PID=$(cat .pid); EXISTS=`ps axw | awk '{print $1}' | grep \"^${PID}$\"`; if [ \"$EXISTS\" ]; then kill $PID; fi; fi",
    "update": "npm run stop && git checkout -- package-lock.json && git pull && npm install && git checkout -- package-lock.json && npm run build && node fwcli migration:run && node fwcli standard:services:add",
    "update-cert": "bin/update-cert.sh api",
    "clean": "rm -fr dist/",
    "build": "npm run clean && mkdir -p dist/src && cp -r src/views dist/src/views && node_modules/.bin/tsc",
    "watch": "npm run build -- -w",
    "fwcloud": "node --no-warnings dist/src/cli/cli.js",
    "test": "npm run build && NODE_ENV=test node --no-warnings node_modules/mocha/bin/_mocha --timeout 99999 --exit --colors dist/tests/**/*spec.js",
    "lint": "eslint \"{src,app,lib,tests}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "lint:check": "npm run lint",
    "format": "prettier --check \"{src,app,lib,tests}/**/*.ts\"",
    "format:fix": "npm run format -- --write",
    "format:check": "npm run format"

  },
  "dependencies": {
    "archiver": "^7.0.1",
    "async": "^3.2.5",
    "async-mutex": "^0.5.0",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "chalk": "^4.1.2",
    "child-process-promise": "^2.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "convict-format-with-moment": "^6.2.0",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "dotenv": "^16.4.5",
    "easy-tree": "0.0.3",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "http-proxy": "^1.18.1",
    "ip": "^2.0.1",
    "joi": "^17.13.1",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "mysql2": "^2.3.3",
    "openpgp": "5.11.1",
    "qrcode": "^1.5.3",
    "reflect-metadata": "0.2.2",
    "semver": "7.6.2",
    "semver-compare": "^1.0.0",
    "serve-static": "^1.15.0",
    "session-file-store": "^1.5.0",
    "shell-escape": "^0.2.0",
    "socket.io": "^3.1.2",
    "speakeasy": "^2.0.0",
    "sqlstring": "2.3.3",
    "ssh2": "^1.15.0",
    "typeorm": "^0.2.45",
    "uuid": "9.0.1",
    "winston": "^3.13.0",
    "ws": "^8.17.0",
    "yargs": "^17.7.2",
    "yauzl": "^3.1.3"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/mocha": "10.0.6",
    "@types/node": "^20.14.2",
    "@types/serve-static": "^1.15.7",
    "@types/session-file-store": "^1.2.5",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "busboy": "^1.6.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.2",
    "chai-json-schema": "^1.5.1",
    "cookie-signature": "1.2.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "mocha": "^10.4.0",
    "prettier": "^3.3.0",
    "sinon": "18.0.0",
    "supertest": "7.0.0",
    "typescript": "^5.4.5"
  }
}
