{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Build & Run Fwcloud",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/src/bin/fwcloud.js",
      //"preLaunchTask": "tsc: build - tsconfig.json",
      "preLaunchTask": "npm: build",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Fwcloud",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/dist/src/bin/fwcloud.js",
      "outputCapture": "std",
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeArgs": [
        "--no-warnings"
      ],
      "args": [
        "--growl",
        "--exit",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/dist/tests/**/*spec.js"
      ],
      "env": {"NODE_ENV": "test"},
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Watch Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "runtimeArgs": [
        "--no-warnings"
      ],
      "args": [
        "--watch",
        "--growl",
        "--exit",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/dist/tests/**/*spec.js"
      ],
      "env": {"NODE_ENV": "test"},
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
  ]
}